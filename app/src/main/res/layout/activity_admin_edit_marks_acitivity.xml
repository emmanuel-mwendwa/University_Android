<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="56dp"
    tools:context=".AdminEditMarksActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextStudentName"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:text="Student Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:id="@+id/editTextStudentRegNo"
        android:layout_below="@+id/editTextStudentName"
        android:text="Student Reg No" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAssignment1"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextStudentRegNo"
        android:hint="Assignment 1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAssignment2"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextAssignment1"
        android:hint="Assignment 2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCat1"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextAssignment2"
        android:hint="Cat 1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCat2"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextCat1"
        android:hint="Cat 2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextExamMarks"
        android:inputType="numberDecimal"
        android:layout_below="@+id/editTextCat2"
        android:hint="Exam" />

    <Button
        android:id="@+id/btnAddMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextExamMarks"
        android:backgroundTint="#171717"
        android:layout_marginTop="16dp"
        android:text="Edit Marks"
        app:cornerRadius="3dp"/>
</LinearLayout>