<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_course_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Code"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cart_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/cart_course_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Results"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cart_course_lecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_course_code"
            android:text="Course Lecturer"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>