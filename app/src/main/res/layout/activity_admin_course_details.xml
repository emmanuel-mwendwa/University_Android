<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminCourseDetailsActivity"
    android:layout_marginTop="60dp">

    <TextView
    android:id="@+id/admin_course_name_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Course Name"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="22dp"
    android:gravity=""
        android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/course_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:src="@drawable/course_pics" />



    <TextView
        android:id="@+id/admin_course_code_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Code"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity=""
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/admin_course_lecturer_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Lecturer"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity=""
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/admin_register_course_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:text="View Registered Students"
        android:textSize="18sp"/>

</LinearLayout>